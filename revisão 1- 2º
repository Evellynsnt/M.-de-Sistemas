USE sistvendas;
-- INSERINDO CLIENTES
INSERT INTO clientes (NOME_CLIENTES, CPF, SEXO, DATA_DE_NASCIMENTO) VALUES
('Evellyn Santos', '12345678900', 'F', '2000-01-20'),
('Anderson Alves', '98765432100', 'M', '1999-02-17');


-- ALTERANDO NOME DO CLIENTE
UPDATE clientes SET NOME_CLIENTES = 'Lucas Silvas' WHERE idCLIENTES = 1;
-- ALTERANDO DATA DE NASCIMENTO
UPDATE clientes SET DATA_DE_NASCIMENTO = '1990-01-02' WHERE idCLIENTES = 2;


-- INSERINDO PRODUTOS
INSERT INTO produtos (NOME_PRODUTOS, MARCA, PRECO_PRODUTO) VALUES
('Vestido longo', 'Marca A', 129.90),
('Calça Jeans', 'Marca B', 89.90);
-- INSERINDO COMPRAS
INSERT INTO compras (idCLIENTES, idPRODUTOS, TOTAL_UNIDADES) VALUES
(1, 1, 2),
(2, 2, 1);


-- ALTERANDO UNIDADES DA COMPRA
UPDATE compras SET TOTAL_UNIDADES = 3 WHERE idCOMPRAS = 1;
-- ALTERANDO PRODUTO DA COMPRA
UPDATE compras SET idPRODUTOS = 2 WHERE idCOMPRAS = 2;


-- EXCLUINDO INFORMAÇÕES
DELETE FROM clientes WHERE idCLIENTES = 1; 
DELETE FROM clientes WHERE idCLIENTES = 2; 
DELETE FROM compras WHERE idCOMPRAS = 1; 
DELETE FROM compras WHERE idCOMPRAS = 2;
DELETE FROM produtos WHERE idPRODUTOS = 1;
DELETE FROM produtos WHERE idPRODUTOS = 2;







